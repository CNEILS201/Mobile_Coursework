<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#0D4CEA">

        <Button
            android:id="@+id/bottomBtn"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:onClick="b1Clicked" />

        <Button
            android:id="@+id/view"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="202dp"
            android:layout_marginRight="202dp"
            android:onClick="viewBtnClicked"
            android:text="View" />

        <Button
            android:id="@+id/search"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp"
            android:onClick="searchBtnClicked"
            android:text="Search" />

        <Button
            android:id="@+id/plan"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:onClick="planBtnClicked"
            android:text="Plan" />

        <Button
            android:id="@+id/btnCalender"
            android:layout_width="211dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="59dp"
            android:hint="Pick Date Here"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RoadWorks"
            android:layout_width="208dp"
            android:layout_height="187dp"
            android:layout_below="@+id/btnCalender"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="63dp"
            android:layout_marginRight="63dp"
            android:layout_marginBottom="115dp"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:layout_width="267dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="8dp"
            android:text="At any point for more info click on markers that will appear on the map"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textSize="15dp"
            android:gravity="center_horizontal" />

        <EditText
            android:id="@+id/streetName"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="Street name"
            android:background="@drawable/bg_round"
            android:textAlignment="center"
            android:inputType="textPersonName"
            tools:visibility="gone"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btnSearchR"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"
            android:layout_marginBottom="135dp"
            android:onClick="btnSearchClicked"
            android:text="Search"
            tools:visibility="gone" />

        <EditText
            android:id="@+id/txtEFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="139dp"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:ems="10"
            android:hint="Enter here"
            android:background="@drawable/bg_round"
            android:textAlignment="center"
            android:visibility="gone"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="111dp"
            android:text="From"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txtETo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="71dp"
            android:layout_marginRight="71dp"
            android:layout_marginBottom="129dp"
            android:ems="10"
            android:hint="Enter here"
            android:inputType="textPersonName"
            android:background="@drawable/bg_round"
            android:textAlignment="center"
            android:visibility="gone"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="173dp"
            android:text="To"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPlan"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="74dp"
            android:layout_marginLeft="74dp"
            android:layout_marginBottom="60dp"
            android:onClick="btnPlanJourneyClicked"
            android:text="Plan Journey"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="4"
        android:background="#2F69FA">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

        <Button
            android:id="@+id/topBtn"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:onClick="topBtnClicked"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>